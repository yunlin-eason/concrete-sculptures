---
import { siteConfig } from '../data/site';

const base = import.meta.env.BASE_URL;
---

<header class="sticky top-0 z-50 w-full border-b bg-background/80 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container mx-auto flex h-16 max-w-5xl items-center justify-between px-4">
    <a href={base} class="text-lg font-bold tracking-wider">{siteConfig.title}</a>
    <nav class="flex gap-6 text-sm font-medium">
      <a href="#about" class="transition-colors hover:text-primary">關於我</a>
      <a href="#works" class="transition-colors hover:text-primary">作品集</a>
      <a href="#map" class="transition-colors hover:text-primary">作品地圖</a>
    </nav>
  </div>
</header>
